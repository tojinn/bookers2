     <td><%= link_to user_path(@user.id) do %><%= attachment_image_tag @user, :profile_image,:fill, 60, 60, fallback: "no_image.jpg" %><% end %></td>
     <td><%= link_to books.title, book_path(books.id) %></td>
     <td><%= books.body %></td>
    </tr>
   <% end %>
   </tbody>
  </table>
</div>
