<%= render 'books/info' %>
<div class="col-8 offset-md-1">
 <h2>Books</h2>
  <table class="table">
   <thead>
     <tr>
         <th></th>
      <th>Title</th>
      <th>Opinion</th>
     </tr>
   </thead>
   
   <tbody>
    <% @books.each do |books| %>
