<%= render 'homes/list' %>
<div class="container">
<div class="row">
<div class="col-md-3">
<h1>User info</h1>
<%= attachment_image_tag @book.user, :profile_image, size:'63x63', fallback: "no_image.jpg" %>
<table class="table">
 <tbody>
     <tr>
         <th>name</th>
         <th><%= @book.user.name %></th>
     </tr>
     <tr>
         <th>introduction</th>
         <th><%= @book.user.introduction %></th>
     </tr>
 </tbody>
</table>
<div class="row">
    <%# if @book.user == current_user %>
     <%= link_to "", edit_user_path(@book.user.id) , class:"btn btn-outline-secondary btn-block fas fa-user-cog" %>
    <%# else %>
     <%#= link_to "", user_path(current_user.id) , class:"btn btn-outline-secondary btn-block fas fa-user-cog" %>
    <%# end %>
</div>
<h1>New book</h1>
<%= form_with model: @newbook, url:'/books', local:true do |f| %>
<p>Title</p>
<%= f.text_field :title %>
<p>Opinion</p>
<%= f.text_area :body %>
<%= f.submit 'Create Book', class:"btn  btn-success"  %>
<% end %>
</div>
<div class="col-md-8 offset-md-1">
 <h2>Book detail</h2>
  <table class="table">
   <thead>
     <tr>
         <th></th>
      <th>Title</th>
      <th>Opinion</th>
   </thead>
   
   <tbody>
    <tr>
     <td><%= link_to user_path(@book.user) do %><%= attachment_image_tag @book.user, :profile_image, size:'40x40', fallback: "no_image.jpg" %><br><%= @book.user.name %><% end %></td>
     <td><%= link_to @book.title, book_path(@book) %></td>
     <td><%= @book.body %></td>
     <% if @book.user == current_user %>
     <td><%= link_to "Edit", edit_book_path(@book), class:"btn btn-success" %></td>
     <td>
      <% if @book.user == current_user %>
       <%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に消しますか？", class:"btn btn-sm btn-danger" %>
      <% end %>
     </td>
     <% else %>
      <td></td>
      <td></td>
     <% end %>
    </tr>
   </tbody>
  </table>
</div>
</div>
<tbody>
 <tr></tr>
</tbody>