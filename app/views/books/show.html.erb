<%= render 'homes/list' %>
<%= render 'books/info' %>
<div class="col-8 offset-md-1">
 <h2>Books</h2>
  <table class="table">
   <thead>
     <tr>
         <th></th>
      <th>Title</th>
      <th>Opinion</th>
     </tr>
   </thead>
   
   <tbody>
    <% @books.each do |books| %>
    <tr>
     <td><%= link_to user_path(@user.id) do %><%= attachment_image_tag @user, :profile_image, size:'40x40', fallback: "no_image.jpg" %><% end %></td>
     <td><%= link_to books.title, book_path(books.id) %></td>
     <td><%= books.body %></td>
     <% if post.user == current_user %>
     <td><%= link_to "edit", edit_book_path(books.id), class:"btn btn-success" %></td>
     <td>
      <% if books.user == current_user %>
       <%= link_to "destroy", book_path(books.id), method: :delete, "data-confirm" => "本当に消しますか？", class:"btn btn-sm btn-danger" %>
      <% end %>
     </td>
     <% else %>
     <td></td>
     <td></td>
    </tr>
   <% end %>
   </tbody>
  </table>
</div>
</div>
<tbody>
 <tr></tr>
</tbody>