<%= render 'homes/list' %>
<%= render 'books/info' %>
<div class="col-md-8 offset-md-1">
 <h2>Book detail</h2>
  <table class="table">
   <thead>
     <tr>
         <th></th>
      <th>Title</th>
      <th>Opinion</th>
     </tr>
   </thead>
   
   <tbody>
    <% @books.each do |book| %>
    <tr>
     <td><%= link_to users_path(user.id) do %><%= attachment_image_tag user, :profile_image, size:'40x40', fallback: "no_image.jpg" %><br><%= user.name %><% end %></td>
     <td><%= link_to books.title, book_path(book.id) %></td>
     <td><%= books.body %></td>
     <% if book.user == current_user %>
     <td><%= link_to "Edit", edit_book_path(book.id), class:"btn btn-success" %></td>
     <td>
      <% if book.user == current_user %>
       <%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "本当に消しますか？", class:"btn btn-sm btn-danger" %>
      <% end %>
     </td>
     <% else %>
      <td></td>
      <td></td>
     <% end %>
    </tr>
   <% end %>
   </tbody>
  </table>
</div>
</div>
