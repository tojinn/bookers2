<%= render 'homes/list' %>
<%= render 'books/info' %>
<div class="col-md-8 offset-md-1">
 <h2>Book detail</h2>
  <table class="table">
   <thead>
     <tr>
         <th></th>
      <th>Title</th>
      <th>Opinion</th>
   </thead>
   
   <tbody>
    <% @books.each do |book| %>
    <tr>
     <td><%= link_to user_path(@user) do %><%= attachment_image_tag book.user, :profile_image, size:'40x40', fallback: "no_image.jpg" %><br><%= book.user.name %><% end %></td>
     <td><%= link_to book.title, book_path(book.id) %></td>
     <td><%= book.body %></td>
    </tr>
   <% end %>
   </tbody>
  </table>
</div>
</div>
