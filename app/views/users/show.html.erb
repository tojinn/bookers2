<%= render 'homes/list' %>
<%= render 'books/info' %>
<div class="col-8 offset-md-1">
 <h2>Books</h2>
 <table class="table">
  <tbody>
   <% @books.each do |book| %>
   <tr>
    <td><%= link_to user_path(book.user.id) do %><%= attachment_image_tag @user, :profile_image, size:'40x40', format:'jpeg', fallback: "no_image.jpg" %><% end %></td>
    <td><%= link_to book.title, book_path(book.id) %></td>
    <td><%= book.body %></td>
   </tr>
  <% end %>
 </tbody>
